    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ListaSodas"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaPlatos"
            android:label="@string/title_activity_lista_platos"
            android:parentActivityName=".ListaSodas">
        </activity>
        <activity
            android:name=".DetallesSoda"
            android:label="@string/title_activity_detalles_soda"
            android:parentActivityName=".ListaPlatos">
        </activity>
        <activity
            android:name=".DetallesPlato"
            android:label="@string/title_activity_detalles_plato"
            android:parentActivityName=".ListaPlatos">
        </activity>

        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
