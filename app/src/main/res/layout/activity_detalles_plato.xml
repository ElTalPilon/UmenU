<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rejuntadosdeinge.umenu.DetallesPlato">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagen_plato"
        android:src="@drawable/spaghetti"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nombre_plato"
        android:id="@+id/tv_nombre_plato"
        android:layout_marginTop="27dp"
        android:layout_alignTop="@+id/imagen_plato"
        android:layout_alignLeft="@+id/tv_precio_plato"
        android:layout_alignStart="@+id/tv_precio_plato" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:clickable="true"
        android:layout_below="@+id/imagen_plato"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/acompanamientos_plato"
        android:id="@+id/textView5"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comentarios"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:gravity="center_horizontal"
        android:background="@color/silver"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nombre_soda"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/silver"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingTop="20dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarDetallesPlato"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$$"
        android:id="@+id/tv_precio_plato"
        android:layout_below="@+id/tv_nombre_plato"
        android:layout_alignLeft="@+id/progressBarDetallesPlato"
        android:layout_alignStart="@+id/progressBarDetallesPlato" />

</RelativeLayout>